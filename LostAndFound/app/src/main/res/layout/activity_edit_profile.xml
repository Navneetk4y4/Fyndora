<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@drawable/profile_background_gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your Avatar"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/emoji_smile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emoji_smile"
            android:tag="ic_emoji_smile"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/emoji_wink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emoji_wink"
            android:tag="ic_emoji_wink"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/emoji_cool"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emoji_cool"
            android:tag="ic_emoji_cool"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/emoji_love"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emoji_love"
            android:tag="ic_emoji_love"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/emoji_happy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emoji_happy"
            android:tag="ic_emoji_happy"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp"/>

</LinearLayout>
