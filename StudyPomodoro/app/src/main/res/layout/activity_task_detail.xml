<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_background"
    tools:context=".TaskDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_task_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/tv_task_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_task_detail"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/new_text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="Complete OS Chapter 3 Notes" />

    <TextView
        android:id="@+id/tv_task_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_detail_title"
        android:layout_alignStart="@id/tv_task_detail_title"
        android:layout_marginTop="4dp"
        android:textColor="@color/new_text_secondary"
        android:textSize="16sp"
        tools:text="For Study Task" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_detail_category"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoro Duration"
            android:textColor="@color/new_text_primary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_focus_duration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_search_bar"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:text="25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Break Duration"
            android:textColor="@color/new_text_primary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_break_duration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_search_bar"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:text="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Number of Cycles"
            android:textColor="@color/new_text_primary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_cycles"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_search_bar"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:text="1" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_start_pomodoro_session"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:backgroundTint="@color/new_primary_purple"
        android:text="Start Pomodoro"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="28dp" />

</RelativeLayout>