<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <View
        android:id="@+id/timeline_line_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/dotted_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_task_status"
        app:layout_constraintStart_toStartOf="@id/iv_task_status"
        app:layout_constraintEnd_toEndOf="@id/iv_task_status" />

    <ImageView
        android:id="@+id/iv_task_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/timeline_line_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/dotted_line"
        app:layout_constraintTop_toBottomOf="@id/iv_task_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_task_status"
        app:layout_constraintEnd_toEndOf="@id/iv_task_status" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="UX Member Payment"
        android:textColor="@color/new_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_task_status"
        app:layout_constraintTop_toTopOf="@id/iv_task_status"
        app:layout_constraintEnd_toStartOf="@id/tv_task_time"/>

    <TextView
        android:id="@+id/tv_task_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Microsoft Product Design"
        android:textColor="#9E9E9E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_task_name"
        app:layout_constraintTop_toBottomOf="@id/tv_task_name" />

    <TextView
        android:id="@+id/tv_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="09:20 am"
        android:textColor="#9E9E9E"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_task_name" />

</androidx.constraintlayout.widget.ConstraintLayout>