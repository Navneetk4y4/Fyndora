<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_background">

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Hi David King"
        android:textColor="@color/new_text_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_greeting_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_greeting"
        android:layout_alignStart="@id/tv_greeting"
        android:text="Today your task list"
        android:textColor="@color/new_text_secondary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_greeting_subtitle"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_search_bar"
        android:drawableStart="@drawable/ic_new_search"
        android:drawablePadding="12dp"
        android:hint="Search task"
        android:paddingHorizontal="20dp" />

    <TextView
        android:id="@+id/tv_projects_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_search"
        android:layout_alignStart="@id/tv_greeting"
        android:layout_marginTop="32dp"
        android:text="Projects"
        android:textColor="@color/new_text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_projects_title"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp" />

</RelativeLayout>